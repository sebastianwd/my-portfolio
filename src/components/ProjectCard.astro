---
import type { HTMLAttributes } from 'astro/types'
import Button from './Button.astro'
import { twMerge } from 'tailwind-merge'
import { Icon } from 'astro-icon/components'

interface Props extends HTMLAttributes<'div'> {
  title: string
  media?: {
    url: string
    type: 'image' | 'video'
  }
  link: string
  showAction?: boolean
  repo?: string
}

const {
  title,
  media,
  link,
  class: className,
  showAction = true,
  repo,
  ...rest
} = Astro.props
---

<div
  {...rest}
  class={twMerge(
    'rounded-lg bg-zinc-900 border border-solid border-neutral-700/75 p-1 flex flex-col h-fit',
    className
  )}
  title={title}
>
  <a
    href={repo || link}
    target='_blank'
    rel='noopener noreferrer'
    class='block'
  >
    <div
      class='rounded-lg'
      style='mask-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.9), 80%, rgba(0, 0, 0, 0)); opacity: 1;'
    >
      {
        media?.type === 'video' ? (
          <video
            class='h-auto w-full object-cover'
            src={media?.url}
            muted
            playsinline
            loop
            autoplay
            preload='auto'
          />
        ) : (
          <img
            class='h-auto w-full object-cover'
            src={media?.url}
            alt={title}
          />
        )
      }
    </div>
  </a>

  <div class='relative'>
    <h3 class='absolute -top-7 px-4 text-xs text-stone-300'>{title}</h3>
    {
      showAction ? (
        <a
          href={link}
          target='_blank'
          rel='noopener noreferrer'
          class='mt-1 w-full'
        >
          <Button variant='tertiary' class='w-full'>
            View live site
            <Icon name='radix-icons:external-link' class='ml-1 size-4' />
          </Button>
        </a>
      ) : null
    }
  </div>
</div>
